{{#if name}}
<h1 title="{{name}}">{{name}}</h1>
{{/if}}
{{#if size}}
<h2>{{size}}</h2>
{{/if}}
<div class="concept-container" data-file-index="{{index}}"></div>
{{#if justification}}
<div class="justification" data-file-index="{{index}}"></div>
{{/if}}
<div class="visibility" data-file-index="{{index}}"></div>
{{#if destination}}
<label class="checkbox" style="{{#if checked}}display:none{{/if}}">
    <input class="drop-destination" type="checkbox" {{#if toGraph}}checked{{/if}} data-file-index="{{index}}">
    {{ i18n 'popovers.file_import.toGraph' }}
</label>
{{/if}}